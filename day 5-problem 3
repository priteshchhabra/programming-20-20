def inputStrings():
    x = input("enter the word you want to find Palindrome Trawler:")
    return x
s = inputStrings()
print(s)
def getStrings(s):
    y = 3
    z = -1
    p = []
    x = 0
    for i in range(len(s)):
        for i in range(len(s[0:z-1])):
            l = s[x:x+y]
            m = l
            if m == m[::-1]:
                p.append(m)
            else:
                pass
            x = x+1
        y = y+1
        z = z-1
        x = 0
    print(p)
getStrings(s)





