class vertice:
    def __init__(self,x,y):
        self.x=x
        self.y=y

class polygon:
    def __init__(self):
        self.vertices=[]
    def formPolygon(self,ver):
        self.vertices.append(ver)

        
class point:
    def __init__(self,x,y):
        self.x=x
        self.y=y
        
class points:
    def __init__(self):
        self.point=[]
    def add_point(self,p):
        self.point.append(p)

        
class UI:
    def input_polygon(self):
        p = polygon()
        v=int(input("enter the number of vertices: "))
        for i in range(v):
            x = int(input("enter the x-coordinate: "))
            y = int(input("enter the y-coordinate: "))
            w = vertice(x,y)
            p.formPolygon(w)
        return p
    def input_points(self):
        p = points()
        n=int(input("enter the number of points to be tested: "))
        for i in range(n):
            x = int(input("enter the x-coordinate: "))
            y = int(input("enter the y-coordinate: "))
            w = point(x,y)
            p.add_point(w)
        return p
u = UI()
u.input_polygon()
u.input_points()
            
